# --- General Vikunja Settings ---
VIKUNJA_PUBLIC_URL=<https://example.com>
VIKUNJA_INTERFACE=:443
VIKUNJA_PORT=443

# --- Security ---
# Generated JWT Secret (Keep this safe!)
JWT_SECRET="<your_JWT_secret>"
AUTOTLS_ENABLED=true
AUTOTLS_EMAIL=<letsencrypt@example.com>

# --- Database (Postgres) ---
# Ensure these match the DB container settings
DB_HOST=db
DB_TYPE=postgres
DB_USER=vikunja
DB_PASSWORD=changeme
DB_NAME=vikunja

# --- Cache (Redis) ---
REDIS_ENABLED=true
REDIS_HOST=redis:6379

# --- OpenID Connect / SSO (Google) ---
OIDC_ENABLED=true
OIDC_PROVIDER_NAME="Google"
OIDC_AUTH_URL=https://accounts.google.com
# Google Client Credentials
OIDC_CLIENT_ID="<Google_OIDC_ID>"
OIDC_CLIENT_SECRET="Google_OIDC_Secret"

# --- Feature Flags ---
PLUGINS_ENABLED=true
